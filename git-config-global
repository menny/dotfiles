[alias]
	co = checkout
	stts = status
	sw = switch
	pushf = push --force-with-lease --force-if-includes
	pickaxe = log -p -S
	cleanup = "!git branch --merged 2>&1 | grep -v main | grep -v '*' | grep -v release-branch- | sed 's/*//' | xargs -I {} git branch -d {} 2>&1"
	cleanup-remote = "!git branch -r --merged 2>&1 | grep -v main | grep -v release-branch- | xargs -I {} git branch -d --remote {} 2>&1"
